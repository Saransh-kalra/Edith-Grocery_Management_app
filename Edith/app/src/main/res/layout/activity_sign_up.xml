<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#32d5d1"
    tools:context=".login.SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent"
        android:layout_weight = "1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Sign Up "
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_margin="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/profile_pic_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"

                android:gravity="center"
                android:text = "Profile Picture"
                android:textColor="#ffffff"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/edit_text_border"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView8"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Email:"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="normal|italic"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="140dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"

                android:padding="5dp"
                android:ems="12"
                android:background="@drawable/edit_text_border"
                android:textAlignment="center"
                android:hint="someone@example.com"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="124dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@+id/email"
                android:layout_toStartOf="@+id/email"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Password: "
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="normal|italic"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="300dp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView10"
                android:layout_alignLeft="@+id/dob"
                android:layout_alignStart="@+id/dob"
                android:layout_margin="10dp"

                android:ems="10"
                android:background="@drawable/edit_text_border"
                android:textAlignment="center"
                android:gravity="center"
                android:hint="********"
                android:padding="5dp"
                android:inputType="textPassword" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/re_enter_pass"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:layout_marginStart="11dp"
                android:gravity="center"

                android:text="Re-enter password:"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="normal|italic"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="352dp" />

            <EditText
                android:id="@+id/re_enter_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:ems="10"
                android:gravity="center"
                android:textAlignment="center"
                android:padding="5dp"
                android:hint="********"
                android:background="@drawable/edit_text_border"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="166dp"
                tools:layout_editor_absoluteY="334dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/dietary_preference"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:layout_marginStart="11dp"
                android:gravity="center"
                android:text="Dietary Preference:"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="normal|italic"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="352dp" />

            <EditText
                android:id="@+id/dietary_preference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:ems="10"
                android:background="@drawable/edit_text_border"
                android:gravity="center"
                android:textAlignment="center"
                android:hint="Vegan"
                tools:layout_editor_absoluteX="166dp"
                tools:layout_editor_absoluteY="334dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/Sign_up_patient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Sign Up"
                android:onClick="registeruser"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/edit_button_border"
                android:gravity="center"
                android:textColor="#32d5d1" />
            <TextView
                android:id="@+id/errormsg"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>